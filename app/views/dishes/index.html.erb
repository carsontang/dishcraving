<h1>Listing dishes</h1>

<table class="table table-bordered table-striped">
  <tr>
    <th>Restaurant</th>
    <th>Name</th>
    <th>Price</th>
    <th>Rating</th>
    <th></th>
    <th></th>
  </tr>

<% @dishes.each do |dish| %>
  <% restaurant = Restaurant.find(dish.restaurant_id) %>
  <tr>
    <td><%= link_to restaurant.name, restaurant %></td>
    <td><%= link_to dish.name, dish %></td>
    <td>$<%= dish.price %></td>
    <td><%= dish.rating %></td>
    <td><%= link_to 'Edit', edit_dish_path(dish) %></td>
    <td><%= link_to 'Destroy', dish, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Dish', new_dish_path %>
